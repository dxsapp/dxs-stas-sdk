{
  "name": "dxs-stas-sdk",
  "version": "2.0.5",
  "description": "TypeScript SDK for building and validating multiple Bitcoin SV transaction flows, including DSTAS token issue, transfer, split, merge, swap, freeze/unfreeze, and redeem.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/dxsapp/dxs-stas-sdk"
  },
  "scripts": {
    "build": "tsc",
    "check": "npm run check:nobuffer",
    "check:nobuffer": "node scripts/check-no-buffer.mjs",
    "lint": "tslint -p tsconfig.lint.json -c tslint.json",
    "lint:staged": "lint-staged",
    "format": "prettier --write \"**/*.{ts,js,json,md,yml,yaml}\"",
    "prepare": "husky install",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "start": "tsnd ./src/index.ts",
    "rollup": "rollup -c rollup.config.ts -w --configPlugin typescript"
  },
  "directories": {
    "test": "tests"
  },
  "author": "oleg@dxs.app (https://github.com/panagushin)",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^30.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rollup": "^4.57.1",
    "ts-jest": "^29.4.6",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.8.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0"
  },
  "lint-staged": {
    "*.ts": [
      "tslint -p tsconfig.lint.json -c tslint.json --force"
    ]
  },
  "dependencies": {
    "@noble/hashes": "^2.0.1",
    "@noble/secp256k1": "^3.0.0",
    "@scure/base": "^2.0.0",
    "@scure/bip32": "^2.0.1",
    "@scure/bip39": "^2.0.1"
  }
}
